<h1>チケット購入 確認画面</h1>

<h2>イベント場所</h2>
<p><%= @event.event_place.name %></p>

<h2>日時</h2>
<p><%= @event.entry_time.to_date %></p>

<h2>イベント</h2>
<p><%= @event.event_name.name %></p>

<h2>時間</h2>
<img src="https://placehold.jp/150x150.png" class="img-fluid" alt="モックアップ">
<% str_time = [@event.entry_time.strftime("%R"),
                "~",
                @event.exit_time.strftime("%R")].join %>
<p><%= str_time %></p>

<h2>購入枚数</h2>

<div>
  <% @tickets.each do |ticket| %>
  <div>
    <p><%= ticket.name + ticket.price.to_s + '円' %></p>

    <p><%= '備考:' + ticket.detail %></p>
    <p>2枚</p>
  </div>
  <% end %>

  <p>合計金額 2,500円</p>
</div>

<%= link_to '購入', thanks_path, class: 'btn btn-primary' %>
<%= link_to '最初から選ぶ', root_path, class: 'btn btn-primary' %>
